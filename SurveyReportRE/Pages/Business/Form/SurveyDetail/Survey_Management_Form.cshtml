@page "{refPageNum:int?}/{pageNum:int?}/{jsonConfig?}"
@model Survey_Management_FormModel
@{
    Layout = null;
}
<script>

    $(function () {
        var outlineOptions = [];
          var _id = @Convert.ToInt32(ViewData["Id"]);
          var _fkId = @Convert.ToInt32(ViewData["FKId"]);
                  if (_fkId)
              $.ajax({
              url: `api/SurveyOutlineOptions/GetFKMany?fkId=${_fkId}&fkField=SurveyId`,
                  type: 'GET',
                  async: false,
                  success: function (response) {
                      outlineOptions = response;
                  },
                  error: function (exception) {
                  }
              });
          var _jsonConfig = '@Html.Raw(ViewData["JsonConfig"])'; 
          var _surveyData = new Object(); 
          if (_jsonConfig) _surveyData = JSON.parse(_jsonConfig);
        if (_id)
        $.ajax({
            url: `api/Management/GetAdditionalOutline/${_id}`,
            type: 'GET',
            async: false,
            success: function (response) {
                _surveyData.additionalOutline = response;
            },
            error: function (exception) {
            }
        });



          var _formConfig = new MFormOption(_surveyData);
          _formConfig.cloneUrl = '/Business/Form/SurveyDetail/Survey_Management_Form/' + _id;
          _formConfig.tabCode = 'Survey_Management_Form';
          _formConfig.tabName = "";
          _formConfig.fieldsFilterByTab = "Management";
          _formConfig.allowFormActionButton = false;
          _formConfig.originModelName = "@Survey_Management_FormModel.ModelName";
          _formConfig.formElementName = "Survey_Management_Form";
          _formConfig.colCount = 1;
          _formConfig.labelLocation = "top";
          _formConfig.schemeBasedOn = `@(Survey_Management_FormModel.SchemeModelName)`;
          _formConfig.refFieldId = _fkId;
          _formConfig.refFieldName = `@(Survey_Management_FormModel.FKModelName)Id`;
          _formConfig.isChildForeignKey = true;
          _formConfig.outlineForm = {isUse: true, surveyTypeId: _surveyData.surveyTypeId, outlineOptions: outlineOptions, isOutlineChecked: true, isOutlineDynamic: true, isAllowRemoveOutline: true };
         _formConfig.isAllowAddOutline = true;
         _formConfig.isReadOnly = _surveyData.isReadOnly;
        new ManagementForm(_id, null, _formConfig, _formConfig);
    });
</script>
<div id="form_Survey_Management_Form_@(Convert.ToInt32(ViewData["FKId"]))_@(Convert.ToInt32(ViewData["Id"]))"></div>

