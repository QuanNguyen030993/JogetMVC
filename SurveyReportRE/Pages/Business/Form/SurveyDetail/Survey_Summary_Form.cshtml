@page "{refPageNum:int?}/{pageNum:int?}/{jsonConfig?}"
@model Survey_Summary_FormModel
@{
    Layout = null;
}
<script>

    $(function () {
          var _id = @Convert.ToInt32(ViewData["Id"]);
          var _fkId = @Convert.ToInt32(ViewData["FKId"]);
          var _jsonConfig = '@Html.Raw(ViewData["JsonConfig"])';
          var _surveyData = new Object();
          if (_jsonConfig) _surveyData = JSON.parse(_jsonConfig);
          var _formConfig = new MFormOption();
          _formConfig.cloneUrl = '/Business/Form/SurveyDetail/Survey_Summary_Form/' + _id;
          _formConfig.tabCode = 'Survey_Summary_Form';
          _formConfig.tabName = "";
          _formConfig.fieldsFilterByTab = "Summary";
          _formConfig.allowFormActionButton = false;
          _formConfig.originModelName = "@Survey_Summary_FormModel.ModelName";
          _formConfig.formElementName = "Survey_Summary_Form";
          _formConfig.colCount = 1;
          _formConfig.labelLocation = "top";
          _formConfig.schemeBasedOn = `@(Survey_Summary_FormModel.SchemeModelName)`;
          _formConfig.refFieldId = _fkId;
          _formConfig.refFieldName = `@(Survey_Summary_FormModel.FKModelName)Id`;
          _formConfig.isChildForeignKey = true;
        _formConfig.isAllowAddOutline = false;
        _formConfig.outlineForm = { isUse: true, surveyTypeId: _surveyData.surveyTypeId, isOutlineChecked: false };
        _formConfig.isReadOnly = _surveyData.isReadOnly;
        new SummaryForm(_id, null, _formConfig);
    });
</script>
<div id="form_Survey_Summary_Form_@(Convert.ToInt32(ViewData["FKId"]))_@(Convert.ToInt32(ViewData["Id"]))"></div>

